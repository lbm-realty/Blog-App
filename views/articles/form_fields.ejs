<div class="form-group">
    <label for="title">Tile</label>
    <input required type="text" value="<%= article.title %>" name="title" id="title" class="form-control mt-2">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control mt-2"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control mt-2"><%= article.markdown %></textarea>
</div>

<a href="/" class="mt-2 btn btn-secondary">Cancel</a>
<button type="submit" class="mt-2 btn btn-primary">Save</button>
